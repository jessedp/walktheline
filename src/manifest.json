{
  "manifest_version": 2,
  "name": "WalkTheLine GPS Simulator",
  "version": "0.1.0",
  "description": "Manual geolocation spoofing with per-tab control, walking simulation, and saved locations.",
  "permissions": ["storage", "tabs", "<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "jessedp@gmail.com",
      "strict_min_version": "109.0"
    }
  },
  "devtools_page": "devtools/devtools.html",
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },
  "icons": {
    "32": "icon32.jpg",
    "48": "icon48.png",
    "64": "icon64.jpg",
    "96": "icon96.png",
    "128": "icon128.jpg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-bridge.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": ["content/page-script.js"]
}
